<p id="notice"><%= notice %></p>
<section class="card shadow-sm bg-white rounded" style="margin-top: 30px; padding-top:30px; padding-bottom:30px">
  <div class="card-body">
    <h1 class="card-title font-weight-bold"><%= @post.title %></h1>
    <p class="lead">
      <i class="material-icons">person_outline</i>
      <span><%= @post.user.first_name %> <%= @post.user.last_name %></span>
      <br>
      <i class="material-icons">date_range</i>
      <span><%= @post.created_at.strftime("%A, %d de %B de %Y, %H:%M h") %></span>
    </p>
    <hr class="my-4">
    <br>
    <p style="font-size:20px" ><%= @post.content %></p>
  </div>
</section>

<br>

<h2 class="my-3" style="font-size: 20px">Comentários (<span><%= @post.comments.size %></span>)</h2>

<% @post.comments.each do |comment| %>
  <section class="card shadow-sm bg-white rounded" style="margin-top: 20px;">
    <div class="card-body">
      <article class="col-xl-8">
        <h5 class="mb-2 mt-2 font-weight-bold"><span><%= comment.user.nil? ? 'Anônimo' : comment.user.first_name %></span> disse:</h5>
        <small class="text-muted"><span></span><%= comment.created_at.strftime("%A, %d de %B de %Y, %H:%M h") %></small>
        <p class="mb-1"><span><%= comment.body %></span></p>
      </article>
      <div class="col-xl"></div>
    </div>
  </section>
<% end %>

<br>
<br>

<%= render 'comments/form', comment: @comment %>

<br>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<br>
