<p id="notice"><%= notice %></p>

<h1>Posts</h1>


<% @posts.each do |post| %>
  <div class="card shadow-sm bg-white rounded" style="margin-top: 20px;">
    <div class="card-body">
      <p class="card-subtitle text-muted" style="font-size: 0.8rem;">
      <%= post.user.email %>

      <span><%= post.created_at %></span>
      </p>
      <div style="display: flex; justify-content: right;">
        <%= link_to 'Editar', edit_post_path(post) %> <pre>  </pre> 
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>

			<h4 class="card-title" style="font-weight: bold; color: black; padding-top: 5px;">
				<span ><%= link_to post.title, post, style:"font-weight: bold; color: black" %></span>
			</h4>

			<p class="card-text">
				<span><%= post.content %></span>
			</p>
    </div>
  </div>
<% end %>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
