<h2>Alterar conta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :first_name, class:"form-control my-2", placeholder:"Primeiro nome *", autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, class:"form-control my-2", placeholder:"Ultimo nome *", autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.email_field :email, class:"form-control my-2", placeholder:"Email *", autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "Senha" %> <i>(Deixe em branco se não deseja alterá-la)</i><br />
    <%= f.password_field :password, class:"form-control my-2", placeholder:"Senha *", autofocus: true, autocomplete: "password" %>
    <% if @minimum_password_length %>
      <br />
      <em>Mínimo de <%= @minimum_password_length %> caracteres</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, class:"form-control my-2", placeholder:"Confirmar senha *", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "Senha atual" %> <i>(Nós precimos de sua senha atual para confirmar as mudanças)</i><br />
    <%= f.password_field :current_password, class:"form-control my-2", placeholder:"Senha atual *", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class:"btn btn-primary" %>
    <%= link_to "Voltar", :back %>
  </div>
<% end %>

<div class="card shadow-sm bg-white rounded my-5">
    <div class="card-body">
      <h3>Cancelar conta</h3>
      <p>Não está contente? <%= button_to "Cancelar conta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %></p>
  </div>
</div>

