<h2>Log in</h2>

<%= form_for(resource, as: resource_name, class:"form-group", url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, class:"form-control", placeholder:"Email *", autofocus: true, autocomplete: "email" %>
  </div>
  <br>
  <div class="field">
    <%= f.password_field :password, class:"form-control", placeholder:"Senha *", autocomplete: "current-password" %>
  </div>

  <small class="form-text text-muted d-block">(*) Campos obrigat√≥rios</small>
  <br>
  <% if devise_mapping.rememberable? %>
    <div class="field form-check">
      <%= f.check_box :remember_me, class:"form-check-input" %>
      <%= f.label "lembrar-me", class:"form-check-label" %>
    </div>
  <% end %>

  <%= f.submit "Entrar", class:"btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
