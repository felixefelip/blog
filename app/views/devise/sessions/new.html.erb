<div class="row">
  <div class="col-md-4">
  </div>
  <div class="col-md-4">
    <h2>Entrar</h2>
    <%= form_for(resource, as: resource_name, class:"form-group", url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, class:"form-control my-2", placeholder:"Email *", autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field">
        <%= f.password_field :password, class:"form-control my-2", placeholder:"Senha *", autocomplete: "current-password" %>
      </div>

      <small class="form-text text-muted d-block">(*) Campos obrigat√≥rios</small>
      <% if devise_mapping.rememberable? %>
        <div class="field form-check my-2">
          <%= f.check_box :remember_me, class:"form-check-input" %>
          <%= f.label "lembrar-me", class:"form-check-label" %>
        </div>
      <% end %>
      <div class="">      
        <%= f.submit "Entrar", class:"btn btn-primary" %>
        <br>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
  </div>





